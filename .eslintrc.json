{
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "linebreak-style": 0,
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "arrow-parens": "off",
    "curly": [
      "error"
    ],
    "no-plusplus": "off",
    "arrow-body-style": "off",
    "import/prefer-default-export": "off",
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }],
    "react/jsx-indent": [
      "error",
      2
    ],
    "react/jsx-indent-props": [
      "error",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 150,
        "tabWidth": 2
      }
    ]
  }
}
